<view class="page bg">
    <!--  搜索栏  start   -->
    <view class="page__bd">
        <view class="weui-search-bar" style="background-color:#fff;padding:10px 10px;">
            <view class="bg_search">
                <view class="weui-search-bar__box ">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" bindinput="bindinputValue" placeholder="请输入城市名称或字母" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
            </view>
        </view>
        <!-- 关键字  start -->
        <view class="weui-cells searchbar-result bg " wx:if="{{inputVal.length >= 0}}">
            <view class="weui-cells__title">定位城市</view>
            <view class="weui-cell weui-cell_active weui-cell_bd bg stop_1">
              <navigator url="/pages/index/index" open-type="switchTab"><view class="weui-btn mini-btn bg_b" size="mini">
              <view class="bg_b_img"><image src="/images/address.png"></image></view>
              <view class="bg_b_text">点击定位</view>
              </view></navigator>
            </view>
            <view class="weui-cells__title ">B</view>
            <navigator url="" class="weui-cell border_top_none" hover-class="weui-cell_active">
                <view class="weui-cell__bd" style="border:none;">
                    <view>北京</view>     
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>北京</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>北京</view>
                </view>
            </navigator>

            <view class="weui-cells__title">C</view>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>重庆</view>
                </view>
            </navigator>
            <view class="weui-cells__title">S</view>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>深圳</view>
                </view>
            </navigator>
            <view class="weui-cells__title">G</view>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>广州</view>
                </view>
            </navigator>
        </view>
        <!--  关键字  end   -->
    </view>
    <!--  搜索栏  end   -->
</view>