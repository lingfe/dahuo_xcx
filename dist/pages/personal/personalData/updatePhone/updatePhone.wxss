.page{
  width: 100%;
  background-color: #fff;
  height: auto;
}
.margin_left{
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-top: 0rpx;
}
.bg_search{
  background-color: #F2F2F2;
  border-radius: 5px;
  width: 626rpx;
  border:1rpx solid #e6e6ea;
  margin-left: 40rpx;
}
.weui-search-bar__input {
height:28px;
line-height:28px;
font-size: 20rpx;
font-family:"黑体";
}

.text_center{
  text-align: center;
  font-size: 24rpx;
  font-family:"黑体";
  padding-top: 42rpx;
}
.text_center text{
  width: 100%;
  float: left;
}

.weui-search-bar {
position:relative;
padding:8px 10px;
display:-webkit-box;
display:-webkit-flex;
display:flex;
box-sizing:border-box;
background-color:#efeff4;
border-top:1rpx solid #fff;
border-bottom:1rpx solid #fff;
}

button[type="primary"] {
color:#FFFFFF;
background-color:#14BAC8;
}

button {
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size:18px;
text-align:center;
text-decoration:none;
line-height:83rpx;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
width:626rpx;
height:83rpx;
border:none;
margin-top: 65rpx;
}
