}
.time{
    color:#808080;
    font-size: 18rpx;
}
.mark{

    position: relative;
    left:15rpx;
    right: 35rpx;
    padding-top: 4rpx;
    background-color:#F74c31; 
    text-align: center;
    font-size: 18rpx; 
    width: 35rpx;
    height: 35rpx;
    border-radius:20rpx; 
    color: #ffffff;
    display:table-cell;
}
.line{
    height: 1px;
    width:100%;
    background-color: #E0E1E2;
}


