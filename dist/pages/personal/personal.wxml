<view class="page">
    <view class="page__bd">
        <!-- 个人信息  start -->
        <view class="">
          <view class="item" >
              <view class="item-left">
                    <image src="{{userinfo.avatarUrl}}" class="image"/>
              </view>
              <view class="item-middle">
                    <view>
                        <text class="title_lingfe">{{userinfo.realname}}<text style="margin-left:15rpx;font-size: 20rpx;color:#fff;"><text wx:if="{{userinfo.provinceName !=null}}">{{userinfo.provinceName}}</text><text wx:elif="{{userinfo.provinceName==null}}">火星</text>  已发布{{numBer}}贴</text>
                        </text>
                    </view>
                    <view>
                        <text class="message" >
                          <text wx:if="{{userinfo.memo !=null}}">{{userinfo.memo}}</text>
                          <text wx:elif="{{userinfo.memo ==null}}">来自星星的我..还没有设置签名</text>
                        </text>
                    </view>
              </view>
              <view class="item_right">
                <view bindtap="bindtapMy" id="{{userinfo.id}}"><text class="title_address">个人资料 ></text></view>
                <view bindtap="bindtapService" session-from="weapp">
                    <text wx:if="{{isnotice}}" class="mark text"></text>
                   <image src="/assets/images/tzhi.png" class="image_service"/> 
                  <!-- <contact-button   type="default-dark"   size="20"  session-from="weapp"  class="image_service"></contact-button> -->
                </view>
              </view>
          </view>
          <view  class="line"></view>
        </view>
        <!-- 个人信息  end -->

        <!-- tab切换  start -->
        <view class="weui-tab">
            <!-- 菜单  start -->
            <view class="weui-navbar" style="border-bottom:none;">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'select_text' : ''}}" data-name="{{item}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" 
                style="background-color:#14BAC8;left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <!-- 菜单  end -->
            
            <!-- 内容  start-->
            <view class="weui-tab__panel">
                <!-- 我的发布  start-->
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                  <view class="dahuo_neiro">
                      <view class="neiro" wx:for="{{list}}" wx:key="*this">
                        <view class="data_top">
                            <view class="float-btn"><button bindtap="bindtapRefresh" id="{{item.id}}" class="weui-btn mini-btn button_css" type="default" size="mini">刷新</button></view>
                            <view style="float:left;font-size:24rpx;margin-left:0rpx;" class="float-btn">{{item.timeNuber}}天后自动下架</view>
                        </view>
                        <view class="neiro_img">
                          <image src="{{item.imageArray}}"></image>
                        </view>
                        <view class="neiro_data">
                          <view class="data_titile title">{{item.title}}</view>
                          <view class="data_pro">搭伙金额   <text>{{item.threshold}}</text>万</view>
                          <view class="data_biaoqian">
                              <view class="data_biaoqian_view"><image src="/assets/images/type.png"></image>{{item.releaseType}}</view>
                              <view class="data_biaoqian_view"><image src="/assets/images/hanye.png"></image>{{item.industryChoice}}</view>
                              <view class="data_biaoqian_view">{{item.mdate}}前</view>
                          </view>
                        </view>
                        <view class="data_info info">
                            <image src='/assets/images/{{item.df}}.jpg' class='img_fabu'></image>
                            <view class="float-btn">
                            <button  class="weui-btn mini-btn button_css" bindtap="bindtapEdit" id="{{item.id}}"  data-df="{{item.df}}" data-name="{{item.releaseType}}"  type="default" size="mini">编辑</button></view>
                            <view class="float-btn">
                            <button  class="weui-btn mini-btn button_css" bindtap="bindtapOffTheShelf" id="{{item.id}}" type="default" size="mini">下架</button></view>
                        </view>
                      </view>

                  </view>
                </view>
                <!-- 我的发布  end-->

                <!-- 收藏夹  start-->                              
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                  <view class="dahuo_neiro">
                    <navigator url="/pages/index/info/info?releaseId={{item.id}}&personalId={{item.personalId}}" wx:for="{{list}}" wx:key="*this">
                    <view class="neiro_286">
                        <view class="neiro_img"><image src="{{item.imageArray}}"></image></view>
                        <view class="neiro_data">
                          <view class="data_titile title">{{item.title}}</view>
                          <view class="data_pro">搭伙金额   <text>{{item.threshold}}</text>万</view>
                          <view class="data_biaoqian">
                              <view class="data_biaoqian_view"><image src="/assets/images/type.png"></image>{{item.releaseType}}</view>
                              <view class="data_biaoqian_view"><image src="/assets/images/hanye.png"></image>{{item.industryChoice}}</view>
                              <view class="data_biaoqian_view">{{item.mdate}}前</view>
                          </view>
                        </view>
                        <view class="info_data_info info_info">
                          <view wx:if="{{item.projectDescription != null }}">
                            <!-- 项目描述 -->
                            {{item.projectDescription}}
                          </view>
                          <view wx:elif="{{item.incomeDescription != null }}">
                            <!-- 收益描述 -->
                            {{item.incomeDescription == null ?'' : item.incomeDescription}}
                          </view>
                          <view wx:if="{{item.businessDescription != null }}">
                            <!-- 营业描述 -->
                            {{item.businessDescription == null ?'':item.businessDescription}}
                          </view>
                        </view>
                    </view>
                    </navigator>

                  </view>
                </view>
                <!-- 收藏夹  end-->

                <!-- 回收站  start-->
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                  <view class="dahuo_neiro">
                    <view class="neiro"  wx:for="{{list}}" wx:key="*this">
                        <view class="data_top">
                            <view class="float-btn"><button bindtap="bindtapTheShelves" id="{{item.id}}" class="weui-btn mini-btn button_css" type="default" size="mini">上架</button></view>
                            <view style="float:left;font-size:24rpx;margin-left:0rpx;" class="float-btn">已下架</view>
                        </view>
                        <view class="neiro_img"><image src="{{item.imageArray}}"></image></view>
                        <view class="neiro_data">
                          <view class="data_titile title">{{item.title}}</view>
                          <view class="data_pro">搭伙金额   <text>{{item.threshold}}</text>万</view>
                          <view class="data_biaoqian">
                              <view class="data_biaoqian_view"><image src="/assets/images/type.png"></image>{{item.releaseType}}</view>
                              <view class="data_biaoqian_view"><image src="/assets/images/hanye.png"></image>{{item.industryChoice}}</view>
                              <view class="data_biaoqian_view">{{item.mdate}}前</view>
                          </view>
                        </view>
                        <view class="data_info info">
                            <view class="float-btn"><button bindtap="bindtapEdit" id="{{item.id}}" data-df="{{item.df}}" data-name="{{item.releaseType}}" class="weui-btn mini-btn button_css" type="default" size="mini">编辑</button></view>
                            <view class="float-btn"><button bindtap="bindtapDelete" id="{{item.id}}" class="weui-btn mini-btn button_css" type="default" size="mini">删除</button></view>
                        </view>
                    </view>
                  </view>
                </view>
                <!-- 回收站  end-->
            </view>
            <!-- 内容  end -->
        </view>
        <!-- tab切换  end -->
    </view>
</view>

<!--item底部 start-->
<view class="bottomMenu">
  <view bindtap="bindtapDahuo" class="bottomMenu_dahuo_img">
      <view style="float:left;"><image class="bottomMenu_img" src="/assets/images/dahuo_1.jpg"></image></view>
      <view style="float:left;">搭伙</view>
  </view>
    <view bindtap="bindtapUser" class="bottomMenu_user_img selectedColor">
      <view style="float:left;"><image class="bottomMenu_img" src="/assets/images/user_0.jpg"></image></view>
      <view style="float:left;">个人</view>
  </view>
</view>
<!--item底部 end-->