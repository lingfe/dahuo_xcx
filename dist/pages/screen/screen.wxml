<view class="page pageScreen">
    <view class="page_bd page__bdScreen">
        <view class="weui-tab">
            <!-- tab菜单  start -->
            <view class="www">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
             </view>
             <!-- tab菜单  end -->
            <view class="ccc">
                <!-- 金额  start -->
                <view class="weui-cells weui-cells_after-title" hidden="{{activeIndex != 0}}">                
                  <checkbox-group bindchange="checkboxChange">
                  <label class="weui-cell weui-check__label " wx:for="{{checkboxItems}}" wx:key="value">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}aaa</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                  </label>
                  </checkbox-group>
                </view>
                <!-- 金额  end -->

                <!-- 行业  start -->
                <view class="weui-cells weui-cells_after-title" hidden="{{activeIndex != 1}}">                
                  <checkbox-group bindchange="checkboxChange">
                  <label class="weui-cell weui-check__label " wx:for="{{checkboxItems}}" wx:key="value">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}bbb</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                  </label>
                  </checkbox-group>
                </view>
                <!-- 类型  end -->

                <!-- 行业  start -->
                <view class="weui-cells weui-cells_after-title" hidden="{{activeIndex != 2}}">                
                  <checkbox-group bindchange="checkboxChange">
                  <label class="weui-cell weui-check__label " wx:for="{{checkboxItems}}" wx:key="value">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}ccc</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                  </label>
                  </checkbox-group>
                </view>
                <!-- 行业  end -->
            </view>
            <view class="botton_view">
              <!-- 标签  start -->
              <view class="">
                <label  wx:for="{{str}}">
                  <button wx:if="{{item != ''}}" bindtap="clearBtn" data-value="{{item}}" class="weui-btn mini-btn" type="primary" plain="true" size="mini">{{item}}<icon type="cancel" size="23"></icon></button>
                </label>
              </view>
              <!-- 标签  end -->

              <!-- 操作  start -->
              <view class="">
                <button class="weui-btn" type="warn" plain="true" bindtap="bindtapReset">重置</button>
                <navigator url="/pages/index/index" open-type="switchTab">
                  <button class="weui-btn" type="primary" plain="true">确定</button>
                </navigator>
              </view>
              <!-- 操作  end -->
            </view>
        </view>
    </view>
</view>
