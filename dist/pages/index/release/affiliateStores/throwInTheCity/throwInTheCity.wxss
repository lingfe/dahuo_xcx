/*确定选择*/
.weui-btn-area {
  margin:1.17647059em 15px .3em;
  padding-bottom: 80rpx;
}

button[type="primary"] {
  color:#FFFFFF;
  background-color:#14BAC8;
  border-radius: 8px;
}

.button-hover[type="primary"] {
  background-color:#14BAC8;
}
button::after {
content:" ";
width:200%;
height:200%;
position:absolute;
top:0;
left:0;
border:1px solid  #E8EFEF;
-webkit-transform:scale(0.5);
transform:scale(0.5);
-webkit-transform-origin:0 0;
transform-origin:0 0;
box-sizing:border-box;
border-radius:10px;

}