<view class="page">
  <!-- 标题与内容   start-->
  <view class="report">
    <view class="title">
      <text style="color:red;">*</text>转让原因</view>
    <view class="info">
      <textarea auto-focus="true" 
      name="transferReason"
      value="{{transferReason}}"
      bindinput="dataChange" 
      placeholder="请输入.."
      maxlength="501" class="text" />
    </view>
    <view class="title">
      <text style="color:#14BAC8;float:right;">{{num}}/500</text>
    </view>
  </view>
  <!-- 标题与内容   end-->

  <!-- 确定   start-->
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="savatransferReason">确定</button>
  </view>
  <!-- 确定   start-->
</view>