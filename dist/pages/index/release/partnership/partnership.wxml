<view class="page">
    <view class="">
        <form bindsubmit="submitForm">
            <view class="margin_left">
            <!-- 输入标题    start -->
            <view class="weui-cell_to  weui-cells_to  weui-cells_after-title" style="border:none;">
                <view class="weui-cell__bd">
                    <view class="weui-label title">标题</view>
                </view>
                <view class="weui-cell__bd title" style="margin-left:-347rpx;">
                    <input class="weui-input" name="title" value="{{title}}" placeholder="请输入标题"/>
                </view>
            </view>
            <!-- 输入标题    end -->
            </view>

            <view class="margin_left">
            <!-- 输入入伙门槛    start -->
            <view class="weui-cell_to weui-cells_to" style="margin-top:27rpx;">
                <view class="weui-cell__bd">
                    <view class="weui-label title">入伙门槛</view>
                </view>
                <view class="weui-cell__ft title">
                    <input class="weui-input" name="threshold" type="digit" value="{{threshold}}"   bindfocus="bindfocusValue" bindblur="bindinputValue" placeholder="万"/>           
                </view>
            </view>
            <!-- 输入入伙门槛    end -->
            
            <!-- 输入行业选择    start -->
            <view class="weui-cell_to weui-cells_to  weui-cells_after-title">
                <view class="weui-cell__bd">
                    <view class="weui-label title">行业选择</view>
                </view>
                <picker bindchange="sethangye" value="{{hangyeIndex}}"  range="{{hangye}}">
                <view class="weui-cell__ft weui-cell__ft_in-access title">
                    {{hangye[hangyeIndex]}}
                    <input  hidden="true" name="industryChoice"  value="{{hangye[hangyeIndex]}}" />       
                </view>
                </picker>
            </view>
            <!-- 输入行业选择    end -->
            
            <!-- 输入资金布局   <navigator url="/pages/index/release/partnership/fundsLayout/fundsLayout" > start -->
            <view class="weui-cell_to weui-cells_to weui-cells_after-title"  bindtap="fundsLayoutClick" >
                <view class="weui-cell__bd">
                    <view class="weui-label title">资金布局</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access title">
                    {{fundsLayout  == null ? '请填写' : ''}}
                    <input type="text" hidden="true" name="fundDistribution" value="{{fundsLayout}}" />
                    <view wx:if="{{fundsLayout  != null}}">
                      <image class="img_wh" src="/images/uii.png" />
                    </view>
                </view>
            </view>
            <!-- 输入资金布局    end -->
            
            <!-- 输入项目描述    start -->
            <view class="weui-cell_to weui-cells_to weui-cells_after-title"  bindtap="projectDescriptionClick" >
                <view class="weui-cell__bd">
                    <view class="weui-label title">项目描述</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access title">
                    {{projectDescription  == null ? '请填写' : ''}}
                    <input type="text" hidden="true" name="projectDescription" value="{{projectDescription}}" />
                    <view wx:if="{{projectDescription  != null}}">
                      <image class="img_wh" src="/images/uii.png" />
                    </view>
                </view>
            </view>
            <!-- 输入项目描述   end -->
            
            <!-- 输入收益描述    start -->
            <view class="weui-cell_to weui-cells_to weui-cells_after-title"  bindtap="incomeDescriptionClick">
                <view class="weui-cell__bd">
                    <view class="weui-label title">收益描述</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access title">
                    {{incomeDescription  == null ? '请填写' : ''}}
                    <input type="text" hidden="true" name="incomeDescription" value="{{incomeDescription}}" />
                    <view wx:if="{{incomeDescription  != null}}">
                      <image class="img_wh" src="/images/uii.png" />
                    </view>
                </view>
            </view>
            <!-- 输入收益描述    end -->
            
            <!-- 输入公司/团队介绍    start -->
            <view class="weui-cell_to weui-cells_to weui-cells_after-title" bindtap="introduceClick">
                <view class="weui-cell__bd">
                    <view class="weui-label title">公司/团队介绍</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access title">
                    {{introduce  == null ? '请填写' : ''}}
                    <input type="text" hidden="true" name="teamIntroduction" value="{{introduce}}"/>
                    <view wx:if="{{introduce  != null}}">
                      <image class="img_wh" src="/images/uii.png" />
                    </view>
                </view>
            </view>
            <!-- 输入公司/团队介绍    end --> 
                        
            <!-- 输入联系方式    start -->
            <view class="weui-cell_to weui-cells_to weui-cells_after-title" style="border:none;">
                <view class="weui-cell__bd">
                    <view class="weui-label title">联系方式</view>
                </view>
                <view class="weui-cell__ft  title">
                  <input name="phone" type="number" class="weui-input" value="{{flag}}"/>           
                </view>
            </view>
            <!-- 输入联系方式    end -->
            </view>

            <!-- 上传图片  start -->
            <view class="">
                <view class="weui-cell__hd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__hd">
                            <view class="weui-uploader__title title">图片上传</view>
                            <view class="weui-uploader__info">{{files.length}}/6</view>
                        </view>
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <block wx:for="{{files}}" wx:key="*this">
                                    <view wx:if="{{item !=null}}" class="weui-uploader__file" bindlongtap="previewImage" id="{{item}}">
                                      <image class="img_tt" src="/images/delete.png" bindtouchend="bindtapImageDelete" data-img="{{item}}"/>
                                      <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                    </view>
                                </block>
                            </view>
                            <view class="weui-uploader__input-box">
                                <view class="weui-uploader__input" bindtap="chooseImage"></view>
                            </view>
                        </view>
                    </view>
                </view>
          </view>
          <!-- 上传图片  end -->

          <!-- 相关条款  end -->      
          <checkbox-group bindchange="bindAgreeChange" name="isAgree">
              <label class="weui-agree" for="weuiAgree">
                  <view class="weui-agree__text title">
                      <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
                      <view class="weui-agree__checkbox-icon">
                          <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
                      </view>
                      阅读并同意<navigator url="" class="weui-agree__link">《搭伙平台信息发布规则》</navigator>
                  </view>
              </label>
          </checkbox-group>
          <!-- 相关条款  end -->

          <!-- 提交按钮  start -->
          <view class="page__bd page__bd_spacing">
                <button class="weui-btn" formType="submit"  style="background-color:#14BAC8;border:none;" type="primary" >发布</button>
          </view>
          <!-- 提交按钮  end -->  
        </form>
    </view>
</view>