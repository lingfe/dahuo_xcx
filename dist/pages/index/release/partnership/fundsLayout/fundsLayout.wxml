<view class="page">
  <!-- 标题与内容   start-->
  <view class="report">
    <view class="title">
      <text style="color:red;">*</text>资金规划</view>
    <view class="info">
      <textarea auto-focus="true" 
      name="fundDistribution" 
      value="{{fundDistribution}}" 
      bindinput="dataChange" 
      placeholder="请描述筹集后的资金如何使用，例如XXX用于装修、XXX用于采购XX...." 
      maxlength="801" class="text" />
    </view>
    <view class="title">
      <text style="color:#14BAC8;float:right;">{{num}}/800</text>
    </view>
  </view>
  <!-- 标题与内容   end-->

  <!-- 确定   start-->
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="bindtapFundsLayout">确定</button>
  </view>
  <!-- 确定   start-->
</view>