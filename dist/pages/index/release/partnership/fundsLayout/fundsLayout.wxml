<view class="page">
        <!-- 标题与内容   start-->
        <view class="report">
          <view class="title"><text style="color:red;">*</text>资金布局</view>
          <view class="info">
            <textarea 
              auto-focus="true" 
              name="fundDistribution"   
              value="{{fundDistribution}}" 
              bindinput="dataChange"  
              placeholder="请输入.."  
              maxlength="801"  
              class="text"/>
          </view>
          <view class="title"><text style="color:#14BAC8;float:right;">{{num}}/800</text></view>
        </view>
        <!-- 标题与内容   end-->

        <!-- 确定   start-->
        <view class="weui-btn-area" bindtap="bindtapFundsLayout">
            <button class="weui-btn"  style="background-color:#14BAC8;border:none;"  type="primary" bindtap="showTopTips">确定保存</button>
        </view>
        <!-- 确定   start-->
</view>
