<view class="page">
  <!-- 标题与内容   start-->
  <view class="report">
    <view class="title">
      <text style="color:red;">*</text>团队/公司介绍</view>
    <view class="info">
      <textarea auto-focus="true" 
      name="introduce" 
      value="{{introduce}}"
      bindinput="dataChange" 
      placeholder="请介绍目前运营本项目的核心成员，包括他（她）们的履历、故事、成就，帮助项目取得更高的信任力...." 
      maxlength="801" class="text" />
    </view>
    <view class="title">
      <text style="color:#14BAC8;float:right;">{{num}}/800</text>
    </view>
  </view>
  <!-- 标题与内容   end-->

  <!-- 确定   start-->
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="savaintroduce">确定</button>
  </view>
  <!-- 确定   start-->
</view>