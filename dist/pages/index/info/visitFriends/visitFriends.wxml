              <view class="data_pro">搭伙金额   <text>2.5</text>万</view>
              <view class="data_biaoqian">
                  <view class="data_biaoqian_view"><image  src="/assets/images/type.png"></image>生意转让</view>
                  <view class="data_biaoqian_view"><image  src="/assets/images/hanye.png"></image>餐饮业</view>
