.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  background-color: #fff;
}
.item-left{
    margin-top: 15rpx;
    display:table-cell;
    text-align: center; 
}

.image{
    width: 200rpx; 
    height: 200rpx;
    border-radius: 50rpx; 
    background-color: #eeeeee;
}

.image_service{
    margin-top: 90rpx;
    margin-left: 50rpx;
    width: 45rpx; 
    height: 45rpx;
    border-radius: 50rpx; 
    background-color: #eeeeee;
}
.item-middle{
    flex: 1;
    margin-left: 10rpx;
    padding-top: 13rpx;
    overflow: hidden;
}

.title_address{
  color: #000000;
  font-family:"微软雅黑";
  font-weight:bold;
  line-height: 20rpx;
  padding: 32rpx 16rpx,0,16rpx;
  font-size: 20rpx;
  margin-top: 60rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/

}

.message{
  font-family:"微软雅黑";
  color: #808080;
  line-height: 10rpx;
  font-size: 20rpx;
  padding: 0 16rpx,0,16rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.item_right{
    padding-top: 13rpx;
    overflow: hidden; 
}
.time{
    color:#808080;
    font-size: 18rpx;
}
.mark{

    position: relative;
    left:15rpx;
    right: 35rpx;
    padding-top: 4rpx;
    background-color:#F74c31; 
    text-align: center;
    font-size: 18rpx; 
    width: 35rpx;
    height: 35rpx;
    border-radius:20rpx; 
    color: #ffffff;
    display:table-cell;
}
.line{
    height: 1px;
    width:100%;
    background-color: #E0E1E2;
}


