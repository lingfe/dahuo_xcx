.item-left{
    margin-top: 42rpx;
    display:table-cell;
    text-align: center; 
      margin-left: 46rpx;
}

.image{
    width: 110rpx; 
    height: 110rpx;
    border-radius: 50px; 
    background-color: #eeeeee;
}

.image_service{
    margin-top: 90rpx;
