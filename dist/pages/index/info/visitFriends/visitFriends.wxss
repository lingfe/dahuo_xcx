}
.title_lingfe{
  color: #fff;
  line-height: 20rpx;
  padding: 32rpx 16rpx,0,16rpx;
  font-size: 30rpx;
  margin-top: 60rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/

}

.title_address{
  color: #fff;
  font-weight:bold;
  line-height: 20rpx;
  padding: 32rpx 16rpx,0,16rpx;
  font-size: 20rpx;
  position: relative;
  top: 36rpx;
  margin-top: 60rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/

}

.message{
  color: #fff;
  line-height: 10rpx;
  font-size: 20rpx;
  padding: 0 16rpx,0,16rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.item_right{
    padding-top: 13rpx;
    overflow: hidden; 
    margin-right: 26rpx;
}
.time{
    color:#808080;
    font-size: 18rpx;
}
.mark{

    position: relative;
    left:15rpx;
    right: 35rpx;
    padding-top: 4rpx;
    background-color:#F74c31; 
    text-align: center;
    font-size: 18rpx; 
    width: 35rpx;
    height: 35rpx;
    border-radius:20rpx; 
    color: #ffffff;
    display:table-cell;
}

.line{
    height: 1px;
    width:100%;
    background-color: #E0E1E2;
}


