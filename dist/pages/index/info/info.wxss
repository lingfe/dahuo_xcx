}
.select_text{
  text-align: center;
  font-family:"微软雅黑";
  color: blue;
  margin-top: 15rpx;
}

.viewMy{
  margin-top: 10rpx;
  width: 750rpx;
  height: auto;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-top: 8rpx;
  background-color: #fff;
/**  border: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #d0d0d0;
  border-radius: 5rpx;*/
}
.item-left{
    margin-top: 15rpx;
    display:table-cell;
    text-align: center; 
}
.image{
    width: 88rpx; 
    height: 88rpx;
    border-radius: 44rpx; 
    background-color: #eeeeee;
}
.images_item{
    width: 100%; 
    height: 400rpx;
    border-radius: 0rpx;
}

.item-middle{
    flex: 1;
    margin-left: 10rpx;
    padding-top: 13rpx;
    overflow: hidden;
}

.message{
  font-family:"微软雅黑";
  color: #808080;
  line-height: 10rpx;
  font-size: 16rpx;
  padding: 0 16rpx,0,16rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.item_right{
    padding-top: 13rpx;
    overflow: hidden; 
}
.time{
    color:#808080;
    font-size: 18rpx;
}
.mark{
    position: relative;
    left:15rpx;
    right: 35rpx;
    padding-top: 4rpx;
    background-color:#F74c31; 
    text-align: center;
    font-size: 18rpx; 
    width: 35rpx;
    height: 35rpx;
    border-radius:20rpx; 
    color: #ffffff;
    display:table-cell;
}


.weui-cell__ft{ width:500rpx;text-align:right;color:#999}
