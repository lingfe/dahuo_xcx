.container{
  width: 750rpx;
  height: auto;
  background-color: #F8F8FF;
  font-family:"微软雅黑";
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**头**/
.dahuo_top {
  width: 750rpx;
  height: 80rpx;
  background-color: #fff;
  position: absolute;
  top:0%;
}
.top_left {
  line-height: 100rpx;
  margin-left: 3%;
  font-size: 20rpx;
  float: left;
}
.top_left image{
  margin-left:0.5em;
  height:9rpx;
  width:15rpx;
}
.top_zho {
  width: 6em;
  float: left;
  margin-left: 20%;
  text-align: center;
}
.top_zho button {
  background-color: #14BAC8;
  height: 51rpx;
  color: #fff;
  width: 262rpx;
  font-size:24rpx;
  margin-top: 0.5em;
}
.top_right {
  line-height: 100rpx;
  margin-top: 0.7em;
  float:right;
  margin-right: 3%;
}
.top_right image {
  width:35rpx;
  height:28rpx;
  float: left;
}


/**内容**/
.dahuo_neiro{
  margin-left: 16rpx;
  margin-top: 2.5em;
}
.neiro {
  width: 716rpx;
  background-color: #fff;
  height: 286rpx;
  margin-top: 16rpx;
  float: left;
}
.neiro_img{
  width: 210rpx;
  height: 124rpx;
  float: left;
  margin-top: 26rpx;
  margin-bottom: 26rpx;
  margin-left: 34rpx;
}
.neiro_img image{
  width: 210rpx;
  height: 124rpx;
}
.neiro_data {
  width: 450rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
}
.data_titile {
  margin-left: 15rpx;
  margin-top: 16rpx;
  color: green;
  font-size: 26rpx;
}
.data_pro {
  margin-left: 15rpx;
  margin-top: 10rpx;
  height: 50rpx;
  font-family:"微软雅黑";
  line-height: 50rpx;
  float: left;
  font-size: 21rpx;
  color: #333;
}
.data_pro text {
  color: red;
}
.data_biaoqian {
  margin-left: 15rpx;
  margin-top: 10rpx;
  margin-bottom: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
}

.title{
  color: #14BAC8;
  line-height: 50rpx;
  font-size: 30rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/

}
.info{
  margin-right: 15rpx;
  font-family:"微软雅黑";
  color: #808080;
  margin-top: 10rpx;
  font-size: 25rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.data_biaoqian_view{
  margin-right: 20rpx;
  font-size: 19rpx;
  float: left;
  font-family:"微软雅黑";
  color: #333;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
}
.data_biaoqian_view image{
  margin-right: 12rpx;
  height: 19rpx;
  width: 22rpx;

}

.data_info{
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  margin-left: 30rpx;
  width: 645rpx;
  background-color: #fff;
  color: #333;
  font-size: 22rpx;
  border-top: 1px solid #C4C4C4;
  float: left;
}

/** 发布样式 **/
.release{
 position: fixed;
 right: 1.3em;
 bottom: 1.3em;
}
.release image{
  width: 60px;
  height: 60px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
