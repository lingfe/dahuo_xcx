.container{
  width: 750rpx;
  height: auto;
  background-color: #F8F8FF;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**头**/
.dahuo_top {
  width: 750rpx;
  height: 100rpx;
  background-color: #fff;
  position: absolute;
  top:0%;
}
.top_left {
  line-height: 100rpx;
  margin-left: 3%;
  float: left;
}
.top_zho {
  width: 6em;
  float: left;
  margin-left: 20%;
  text-align: center;
}
.top_zho button {
  background-color: #CDCDB4;
  height: 3.0em;
  color: #fff;
  width: 10em;
  line-height: 3.5em;
  margin-top: 0.5em;
  background-image: url("../images/zan.png");
}
.top_right {
  line-height: 100rpx;
  margin-top: 0.7em;
  float:right;
  margin-right: 3%;
}
.top_right image {
  width:60rpx;
  height:49rpx;
  float: left;
}


/**内容**/
.dahuo_neiro{
  width: auto;
  margin-left: 0.8em;
  margin-top: 3em;
}
.neiro {
  width: 700rpx;
  background-color: #fff;
  height: auto;
  margin-top: 1em;
  float: left;
}
.neiro_img{
  width: 220rpx;
  height: 200rpx;
  float: left;
}
.neiro_img image{
  width: 220rpx;
  height: 200rpx;
}
.neiro_data {
  width: 450rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
}
.data_titile {
  color: green;
}
.data_pro {
  width: 450rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  font-size: 16px;
}
.data_pro text {
  color: red;
}
.data_biaoqian {
  width: 450rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
}
.data_biaoqian_view{
  margin-right: 1em;
  font-size: 12px;
  float: left;
  margin-top: 0.3em;
}

.data_info{
  width: 680rpx;
  background-color: #fff;
  height: 3em;
  border-top: 1px solid #000;
  margin-top: 3rpx;
  float: left;
}

/** 发布样式 **/
.release{
 position: fixed;
 right: 1.3em;
 bottom: 1.3em;
}
.release image{
  width: 60px;
  height: 60px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
