<view class="wrap"> 
    <!-- 信息 start-->
    <view class='dahuo_neiro'>
      <navigator url="/pages/index/info/info">
      <view class="neiro" bindtap="getInputValue">
        <view class="neiro_img">
          <image src="https://static.daho.club/static/upload/web.echsoft.cn/admin/0f2ab319bae84dedbd123fb098e0adc6.jpg"></image>
        </view>
        <view class="neiro_data">
          <view class="data_titile title">啊啊啊啊啊啊啊啊啊啊啊啊</view>
          <view class="data_pro">搭伙金额
            <text>0万</text>
          </view>
          <view class="data_biaoqian">
            <view class="data_biaoqian_view">
              <image src="/assets/images/type.png"></image>生意转让</view>
            <view class="data_biaoqian_view">
              <image src="/assets/images/hanye.png"></image>餐饮</view>
            <view class="data_biaoqian_view">10天前</view>
          </view>
        </view>
      </view>
    </navigator>
    </view>
    <!-- 信息 end-->

    <!-- 聊天窗口  start-->  
    <view class="containerBox">
       <view wx:key="{{index}}" wx:for="{{allContentList}}">
            <view class='show_left' wx:key="{{index}}"  wx:if="{{index%2 == 1}}">
              <view class='imgtox_left'>
                <image src="http://img1.3lian.com/gif/more/11/201212/cd1d745ed855bef27f47c8aff0786067.jpg" class="image_left"/>
              </view>
              <view class='triangle_left'></view>
              <view class='textBox_left fl'>{{item.value}}</view>
            </view>

            <view class='show_right' wx:key="{{index}}"  wx:if="{{index%2 == 0}}">
              <view class='imgtox_right'>
                <image src="http://img1.3lian.com/gif/more/11/201212/04b335ead07530a6188a27549fad1a68.jpg" class="image_right"/>
              </view>
              <view class='triangle_right'></view>
              <view class='textBox_right fr'>{{item.value}}</view>
            </view>
       </view>
    </view>
    <!-- 聊天窗口  end-->   

    <!-- 评论文本框  start-->
    <view class="handleBox">
      <view class="inputValue">
        <input class="input_submit"  value="{{inputTemp}}" bindinput="bindKeyInput" placeholder="点击输入，开始聊天吧"/>
      </view>
      <view style="float:left;">
        <image class="faso" src="/assets/images/faso.png" data-rid="{{releaseInfo.id}}"  bindtap="submitTo" />
      </view>
    </view>
    <!-- 评论文本框  end-->
</view>

