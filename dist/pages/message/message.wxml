<view  stytle=" overflow-x: hidden; overflow-y: auto;">
  <view class="message__list">
     <block wx:for="{{messages}}">

        <navigator url="/pages/message/chat/chat">
          <view class="item" >
             <view class="item-left">
                  <text wx:if="{{item.count !=0 }}" class="mark text">{{item.count}}</text>
                  <image src="{{item.url}}" class="image"/>
             </view>
             <view class="item-middle">
                  <view>
                       <text class="title">{{item.title}}</text>
                  </view>
                  <view>
                      <text class="message">{{item.message}}</text>
                  </view>
                  <view>
                    <text class="time">{{item.time}}</text>
                  </view>
            </view>
            <view class="item_right">
                  <image src="{{item.url}}" class="image_right"/>
            </view>
         </view>
         <view  class="line"></view>
       </navigator>

    </block>
  </view>
</view>