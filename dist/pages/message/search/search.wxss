page, .page, .page__bd {
  height: 100%;
  background-color: #E8EFEF;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  text-align: center;
}
.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  background-color: #fff;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #fff;
}


/*三角*/
.triangle{
  position: relative;
  margin-top:23rpx;
  margin-left:-32rpx;
  width:0;
  height:0;
  border-top:5px solid transparent;
  border-right:12px solid #fff;
  border-bottom:5px solid transparent;
  
}

/*系统消息*/
.containerBox {
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}

.textBox {
  display: block;
  text-align: left;
  max-width: 500rpx;
  border-radius: 5px;
  font-size: 13px;
