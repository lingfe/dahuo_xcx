}

.img{
   width: 500rpx;
   height: 300rpx;   
   background-repeat: no-repeat;
   background-size: 100% 100%;
}
.selectInfo{
  color: #14BAC8;
  text-align: center;
  margin-top: 10rpx;
}

.fl {
  float: left;
  background: #fff;
}
.imgtox{
  width: 100rpx;
  height: auto;
  float: left;
}
.image_left {
  width: 100rpx;
  height: 100rpx;
  margin-left: 21rpx;
