<view class="page">
  <!-- 标题与内容   start-->
  <view class="report">
    <view class="title">
      <text style="color:red;">*</text>反馈内容</view>
    <view class="info">
      <textarea auto-focus="true" 
      name="content"
      value="{{content}}"
      bindinput="dataChange"
      placeholder="请输入.." 
      maxlength="501" class="text" />
    </view>
    <view class="title">
      <text style="color:#14BAC8;float:right;">{{num}}/500</text>
    </view>
  </view>
  <!-- 标题与内容   end-->

  <!-- 确定   start-->
  <view class="weui-btn-area" bindtap="savebindtapfeedback">
    <button class="weui-btn" type="primary" bindtap="showTopTips">提交反馈</button>
  </view>
  <!-- 确定   start-->
</view>
